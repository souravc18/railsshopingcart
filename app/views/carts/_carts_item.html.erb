<section class="h-100 h-custom" style="background-color: #eee;">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col">
				<div class="card">
					<div class="card-body p-4">

						<div class="row">

							<div class="col-lg-7">
								<h5 class="mb-3"><a href="#!" class="text-body"><i
											class="fas fa-long-arrow-alt-left me-2"></i><%= current_user.email.split('@')[0].capitalize %> Your Cart Items </a></h5>
								<hr>

								<div class="d-flex justify-content-between align-items-center mb-4">
									<div>
										<p class="mb-1">Shopping cart</p>
									</div>
									<div>
									<div id="cart"">
										<h3>Cart Total: <%= current_order.subtotal %></h3>
									</div>
									</div>
								</div>
								<div class="d-flex justify-content-between align-items-right mb-4">
									<div>
										<%= link_to "Continue Shoping", root_path, class:"btn btn-outline-secondary"%>
									</div>
								</div>
								<% @order_items.each do |item| %>
									<div class="card mb-3" style="width:850px;">
										<div class="card-body">
											<div class="d-flex justify-content-between">
												<div class="d-flex flex-row align-items-center">
													<div>
														<img
															src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img1.webp"
															class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
													</div>
												</div>

												<div class="ms-3">
													<%= item.product.title %>
												</div>

												<div style="width: 100px;">
													<%= item.product.price %>
												</div>

												<div style="width: 200px;">
													<%= form_for item, remote: true do |f| %>
														<%= link_to "Remove Items", order_item_path(item), method: :delete, remote: true, class:"btn btn-outline-primary"%>
													<% end %>
												</div>
												<div style="width: 300px;">
													<h2>Subtotal: <%= item.total %></h2>
												</div>
											</div>
										</div>
									</div>
								<% end %>
								<div class="btn btn-outline-secondary" style="float: right">Proceed to checkout</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
